<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/edittext_background"
        android:id="@+id/etOutput"
        />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/etOutput"
        android:text="7"
        android:background="@drawable/btn_background"
        android:id="@+id/btn7"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/etOutput"
        android:text="8"
        android:background="@drawable/btn_background"
        android:id="@+id/btn8"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/etOutput"
        android:text="9"
        android:background="@drawable/btn_background"
        android:id="@+id/btn9"/>

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/etOutput"
        android:text="/"
        android:background="@drawable/btn_background"
        android:id="@+id/btndiv"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/btn7"
        android:background="@drawable/btn_background"
        android:text="4"
        android:id="@+id/btn4"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/btn8"
        android:text="5"
        android:background="@drawable/btn_background"
        android:id="@+id/btn5"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/btn9"
        android:text="6"
        android:background="@drawable/btn_background"
        android:id="@+id/btn6"/>

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/btndiv"
        android:text="x"
        android:background="@drawable/btn_background"
        android:id="@+id/btnmul"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/btn4"
        android:text="1"
        android:background="@drawable/btn_background"
        android:id="@+id/btn1"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/btn5"
        android:text="2"
        android:background="@drawable/btn_background"
        android:id="@+id/btn2"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/btn6"
        android:text="3"
        android:background="@drawable/btn_background"
        android:id="@+id/btn3"/>

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/btnmul"
        android:text="-"
        android:background="@drawable/btn_background"
        android:id="@+id/btnmin"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/btn1"
        android:text="."
        android:background="@drawable/btn_background"
        android:id="@+id/btndot"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/btn2"
        android:text="0"
        android:background="@drawable/btn_background"
        android:id="@+id/btn0"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/btn3"
        android:text="C"
        android:background="@drawable/btn_background"
        android:id="@+id/btnC"/>

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/btnmin"
        android:text="+"
        android:background="@drawable/btn_background"
        android:id="@+id/btnadd"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/btnC"
        android:text="="
        android:background="@drawable/btn_background"
        android:id="@+id/btnequal"/>


</RelativeLayout>